<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cgd">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".TheApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PullRefreshActivity" />
        <activity
            android:name=".activity.SceenChangeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".activity.GestureModifyVolumeActivity" />
        <activity android:name=".activity.RippleActivity" />
        <activity android:name=".activity.RxjavaActivity" />
        <activity android:name=".activity.MVPActivity" />
        <activity android:name=".activity.RetrofitActivity" />
        <activity android:name=".activity.DayNightActivity" />
        <activity android:name=".activity.TestDayNightActivity" />
        <activity android:name=".activity.VerticalPageSeekBarActivity" />
        <activity android:name=".activity.GestureModifyVolumeBrightActivity" />
        <activity android:name=".activity.ScrllowViewActivity" />
        <activity android:name=".activity.VerticalColorSeekBarActivity" />
        <activity android:name=".activity.AudioFxActivity" />
        <activity android:name=".activity.ScrollViewToTopActivity" />
        <activity android:name=".activity.ColorFilterActivity"></activity>
    </application>

</manifest>