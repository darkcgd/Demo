<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:id="@+id/layoutShow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="#CCFFFFFF"
        android:orientation="vertical" >

        <Button
            android:id="@+id/imageviewUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一页" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_radius_blue"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            >
            <com.cgd.widget.VerticalPageSeekBar
                android:id="@+id/seekBar"
                android:layout_width="20px"
                android:layout_height="300dip"
                android:progressDrawable="@drawable/seekbar_holo_light_change_font"
                android:thumb="@mipmap/seekbar_ratio"
                android:thumbOffset="0dip"
                android:minWidth="33px"
                android:maxWidth="33px"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/souhu_player_volume"
                />
        </LinearLayout>
        <Button
            android:id="@+id/imageviewDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一页" />
    </LinearLayout>

</LinearLayout>